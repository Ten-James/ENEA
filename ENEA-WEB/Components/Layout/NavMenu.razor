@using System.Reflection

@code {

    public class LinkObject {
        public String Icon { get; set; }
        public String Url { get; set; }
        public String DisplayName { get; set; }
    }

    private readonly LinkObject[] links =
    {
        new LinkObject { Icon = Icons.Material.Filled.Home, Url = "/", DisplayName = "Home" },
        new LinkObject { Icon = Icons.Material.Filled.People, Url = "/Users", DisplayName = "Users" },
        new LinkObject { Icon = Icons.Material.Filled.ChargingStation, Url = "/ChargerGroups", DisplayName = "Charger Groups" },
        new LinkObject { Icon = Icons.Material.Filled.BugReport, Url = "/Error", DisplayName = "Error" }
    };

    private readonly String Version = Assembly.GetExecutingAssembly().GetName().Version?.ToString() ?? "0.0.0";

}

<MudDrawerHeader>
    <MudText Typo="Typo.h6">ENEA</MudText>
</MudDrawerHeader>
<MudNavMenu Color="Color.Surface" Bordered="true">
    @foreach (var link in links)
    {
        <MudNavLink Href="@link.Url" Match="@(link.Url == "/" ? NavLinkMatch.All : NavLinkMatch.Prefix)">
            <MudIcon Icon="@link.Icon" Size="Size.Medium"/>
            @link.DisplayName
        </MudNavLink>
    }
</MudNavMenu>