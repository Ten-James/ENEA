<Window x:Class="Enea_WPF.Modals.ChargerGroupModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Charger Group Modal" Height="450" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Name:" Margin="0,0,0,5" />
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Latitude:" Margin="0,0,0,5" />
            <TextBox x:Name="LatitudeTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Longitude:" Margin="0,0,0,5" />
            <TextBox x:Name="LongitudeTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Address:" Margin="0,0,0,5" />
            <TextBox x:Name="AddressTextBox" Margin="0,0,0,10" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Save" Width="75" Margin="5" Click="SaveButton_Click" />
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>