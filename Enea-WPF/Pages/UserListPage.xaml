<UserControl x:Class="Enea_WPF.UserListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="User List" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="10" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Create User" Width="100" Margin="0,0,10,0" Click="CreateUserButton_Click" />
            <Button Content="Edit User" Width="100" Margin="0,0,10,0" Click="EditUserButton_Click" />
            <Button Content="Delete User" Width="100" Click="DeleteUserButton_Click" />
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="dataGridUsers" AutoGenerateColumns="True"
                  AutoGeneratedColumns="DataGridUsers_OnAutoGeneratedColumns"
                  ItemsSource="{Binding Users}" Margin="10" IsReadOnly="True" />
    </Grid>
</UserControl>